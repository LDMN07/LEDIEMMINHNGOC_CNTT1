#include <iostream>
using namespace std;

class PhanSo {
private:
    int tuSo;
    int mauSo;

public:
    PhanSo() {
        tuSo = 0;
        mauSo = 1;
    }
    PhanSo(int tu, int mau) {
        tuSo = tu;
        mauSo = mau;
    }
    void nhapPhanSo() {
        cout << "Nhap tu so: ";
        cin >> tuSo;
        cout << "Nhap mau so: ";
        cin >> mauSo;
    }
    void xuatPhanSo() {
        cout << tuSo << "/" << mauSo << endl;
    }
};
